              "type": "object",
              "properties": {
                "micronets": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "connected-devices": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "device-mac": {
                              "type": "string",
                              "example": "B8:27:EB:D8:DF:30"
                            },
                            "device-name": {
                              "type": "string",
                              "example": "ProtoMed 1"
                            },
                            "device-id": {
                              "type": "string",
                              "example": "sdfew32123"
                            },
                            "device-openflow-port": {
                              "type": "string",
                              "example": "2"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
