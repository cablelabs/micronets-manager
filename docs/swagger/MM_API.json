                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "example": "brmn001"
                    },
                    "macAddress": {
                      "type": "string",
                      "example": "80:ee:73:d9:dc:3f"
                    },
                    "trunkIp": {
                      "type": "string",
                      "example": "192.168.250.0/24"
                    },
                    "trunkPort": {
                      "type": "string",
                      "example": "2"
                    },
                    "ports": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "port": {
                            "type": "string",
                            "example": "3"
                          },
                          "interface": {
                            "type": "string",
                            "example": "enp0s31f6"
                          },
                          "hwtype": {
                            "type": "string",
                            "example": "wired"
                          },
                          "subnet": {
                            "type": "string",
                            "example": "192.168.250.0/24"
                          },
                          "macAddress": {
                            "type": "string",
                            "example": "80:ee:73:d9:dc:3f"
